<div class="panel panel-default">
  <div class="panel-body row">
    <div class="col-sm-1">
      <img src="/avatar.png" class="rounded-img" height="50px" width="50px">
    </div>
    <div class="col-sm-11">
      <%= form_for(@newPost) do |f| %>
        <div class="field" style="margin-left: 10px">
          <%= f.text_field :content, autofocus: true, class: "form-control" %>
          <span type="button" style="float: right; margin-top: 15px;"><%= f.submit "Tweet", class: "btn btn-primary" %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
